<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"


    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layoutMatris"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:background="#3F51B5"
        android:orientation="horizontal"></LinearLayout>

    <RelativeLayout
        android:id="@+id/altLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5162CC">

        <Button
            android:id="@+id/buttonHesapla"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="19dp"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="119dp"
            android:layout_marginEnd="89dp"
            android:layout_marginRight="89dp"
            android:layout_marginBottom="1dp"
            android:layout_toEndOf="@+id/buttonAdim"
            android:layout_toRightOf="@+id/buttonAdim"
            android:background="#E91E63"
            android:text="SONUC"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/buttonAdim"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="69dp"
            android:layout_marginLeft="69dp"
            android:layout_marginTop="119dp"
            android:background="#E91E63"
            android:text="SONRAKI ADIM"
            android:textColor="#FFFFFF" />

        <EditText
            android:id="@+id/editTextUzunluk"
            android:layout_width="197dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="121dp"
            android:layout_marginRight="121dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Uzunluk Giriniz"
            android:inputType="none|numberDecimal"
            android:textColor="#E91E63"
            android:backgroundTint="#FFFFFF"
            android:textColorHint="#FFFFFF" />

        <TextView
            android:id="@+id/textViewAdim"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="109dp"
            android:layout_marginLeft="109dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="112dp"
            android:layout_marginRight="112dp"
            android:foregroundGravity="center"
            android:gravity="center"
            android:text="TextView"
            android:textColor="?attr/colorError"
            android:textSize="16dp"
            android:visibility="invisible" />

    </RelativeLayout>

</LinearLayout>